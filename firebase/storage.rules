rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Public assets bundled with the app (admin-only write)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // User uploads (PRIVATE by default)
    // Path convention: uploads/{uid}/...
    match /uploads/{uid}/{allPaths=**} {
      // Only the owner can read their uploads
      allow read: if request.auth != null && (request.auth.uid == uid || request.auth.token.admin == true);

      // Only the owner can write their uploads
      // Limit size + allow only image/* (safe default)
      allow write: if request.auth != null
                   && request.auth.uid == uid
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
