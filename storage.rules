rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isOwner(uid) { return request.auth != null && request.auth.uid == uid; }
    function isAdmin() { return request.auth != null && request.auth.token.email == 'urciknikolaj642@gmail.com'; }
    function okImage() {
      return request.resource.size < 6 * 1024 * 1024 &&
             request.resource.contentType.matches('image/.*');
    }

    match /chat_images/{uid}/{file=**} {
      allow read: if true;
      allow write: if (isOwner(uid) || isAdmin()) && okImage();
    }
    match /rent_images/{uid}/{file=**} {
      allow read: if true;
      allow write: if (isOwner(uid) || isAdmin()) && okImage();
    }
    match /dm_images/{uid}/{file=**} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if (isOwner(uid) || isAdmin()) && okImage();
    }
    match /help_images/{city}/{file=**} {
      allow read: if true;
      allow write: if isAdmin() && okImage();
    }
    match /payments/{uid}/{file=**} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if (isOwner(uid) || isAdmin()) && okImage();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}