rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /chat_images/{uid}/{file=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid && request.resource.size < 6 * 1024 * 1024 && request.resource.contentType.matches('image/.*');
    }
    match /rent_images/{uid}/{file=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid && request.resource.size < 6 * 1024 * 1024 && request.resource.contentType.matches('image/.*');
    }
    match /dm_images/{uid}/{file=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid && request.resource.size < 6 * 1024 * 1024 && request.resource.contentType.matches('image/.*');
    }
    match /{all=**} { allow read: if false; }
  }
}