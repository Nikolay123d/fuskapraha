rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read of everything (thumbnails, backgrounds, etc.).
    match /{allPaths=**} {
      allow read: if true;
    }
    // User uploads live here
    match /uploads/{uid}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}