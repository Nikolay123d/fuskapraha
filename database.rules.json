{
  "rules": {
    ".read": true,
    "messages": {
      "$city": {
        ".indexOn": [
          "ts"
        ],
        "$msg": {
          ".read": true,
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['by','ts']) && newData.child('by').isString() && newData.child('ts').isNumber() && newData.child('by').val() === auth.uid && (!newData.child('text').exists() || newData.child('text').isString()) && (!newData.child('img').exists() || newData.child('img').isString())"
        }
      }
    },
    "presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['ts']) && newData.child('ts').isNumber()"
      }
    },
    "emails": {
      "$key": {
        ".read": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com' || (data.child('uid').val() === auth.uid))",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['uid','ts']) && newData.child('uid').val() === auth.uid && newData.child('ts').isNumber()"
      }
    },
    "privateMembers": {
      "$room": {
        "$uid": {
          ".read": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true",
          ".write": "auth != null && auth.uid === $uid",
          ".validate": "newData.val() === true"
        }
      }
    },
    "dms": {
      "$room": {
        ".read": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true",
        "$id": {
          ".write": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true",
          ".validate": "newData.hasChildren(['by','ts']) && newData.child('by').val() === auth.uid && newData.child('ts').isNumber() && (!newData.child('text').exists() || newData.child('text').isString()) && (!newData.child('img').exists() || newData.child('img').isString())"
        }
      }
    },
    "friends": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$other": {
          ".read": "auth != null && (auth.uid === $uid || auth.uid === $other)",
          ".write": "auth != null && (auth.uid === $uid || auth.uid === $other)",
          ".validate": "newData.isBoolean()"
        }
      }
    },
    "profileChangeRequests": {
      ".indexOn": [
        "ts"
      ],
      "$id": {
        ".read": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['by','ts']) && newData.child('by').val()===auth.uid && newData.child('ts').isNumber()"
      }
    },
    "inboxMeta": {
      "$uid": {
        ".indexOn": [
          "ts",
          "lastTs"
        ],
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "settings": {
      "wallpapers": {
        "$key": {
          ".read": true,
          ".write": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'",
          ".validate": "newData.hasChildren(['url','ts']) && newData.child('url').isString() && newData.child('ts').isNumber()"
        }
      }
    }
  }
}