{
  "rules": {
    "roles": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || auth.token.email === 'urciknikolaj642@gmail.com')",
        ".write": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'"
      }
    },
    "bans": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || auth.token.email === 'urciknikolaj642@gmail.com')",
        ".write": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com' || root.child('roles/'+auth.uid+'/moderator').val() === true)"
      }
    },

    "presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "emails": {
      "$key": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['uid','ts']) && newData.child('uid').isString() && newData.child('ts').isNumber()"
      }
    },

    "messages": {
      ".read": true,
      "$city": {
        ".indexOn": ["ts"],
        "$msg": {
          ".write": "auth != null && !(root.child('bans/'+auth.uid+'/until').val() > now)",
          ".validate": "newData.hasChildren(['by','ts']) && newData.child('by').isString() && newData.child('ts').isNumber() && (!newData.child('text').exists() || newData.child('text').isString()) && (!newData.child('img').exists() || newData.child('img').isString())"
        }
      }
    },

    "rentMessages": {
      ".read": true,
      "$city": {
        ".indexOn": ["ts"],
        "$msg": {
          ".write": "auth != null && !(root.child('bans/'+auth.uid+'/until').val() > now)"
        }
      }
    },

    "likes": {
      "$city": {
        "$msg": {
          "$uid": {
            ".read": true,
            ".write": "auth != null && auth.uid === $uid",
            ".validate": "newData.isNumber() && (newData.val() === 1 || newData.val() === -1 || newData.val() === 0)"
          }
        }
      }
    },

    "reports": {
      "$city": {
        "$msg": {
          "$rid": {
            ".read": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com' || root.child('roles/'+auth.uid+'/moderator').val() === true)",
            ".write": "auth != null"
          }
        }
      }
    },

    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || auth.token.email === 'urciknikolaj642@gmail.com')",
        ".write": "auth != null && (auth.uid === $uid || auth.token.email === 'urciknikolaj642@gmail.com')"
      }
    },

    "usersPublic": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "privateMembers": {
      "$room": {
        "$uid": {
          ".read": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true",
          ".write": "auth != null && !(root.child('bans/'+auth.uid+'/until').val() > now)",
          ".validate": "newData.isBoolean()"
        }
      }
    },

    "privateMessages": {
      "$room": {
        ".read": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true && root.child('roomsBlocked/'+$room).val() !== true",
        ".write": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true && root.child('roomsBlocked/'+$room).val() !== true && !(root.child('bans/'+auth.uid+'/until').val() > now)",
        ".indexOn": ["ts"]
      }
    },

    "inboxMeta": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": ["ts","lastTs"]
      }
    },

    "friends": { ".read": "auth != null", ".write": "auth != null" },
    "friendRequests": { ".read": "auth != null", ".write": "auth != null" },

    "map": {
      "poi": {
        ".read": true,
        "$city": {
          "$id": {
            ".write": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com' || root.child('roles/'+auth.uid+'/moderator').val() === true)"
          }
        }
      }
    },

    "help": {
      ".read": true,
      "$city": {
        "cards": {
          ".read": true,
          ".write": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com' || root.child('roles/'+auth.uid+'/moderator').val() === true)"
        }
      }
    },

    "announce": {
      ".read": true,
      "$city": {
        "$id": {
          ".write": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com' || root.child('roles/'+auth.uid+'/moderator').val() === true)"
        }
      }
    },

    "settings": {
      ".read": true,
      ".write": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com' || root.child('roles/'+auth.uid+'/moderator').val() === true)"
    },

    "profileChangeRequests": {
      ".read": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'",
      ".write": "auth != null",
      ".indexOn": ["ts"],
      "$id": {
        ".validate": "newData.hasChildren(['uid','type','to','ts','status']) && newData.child('ts').isNumber()"
      }
    },

    "premiumRequests": {
      ".read": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'",
      ".write": "auth != null"
    },

    "payments": {
      "requests": {
        "$uid": {
          ".read": "auth != null && (auth.uid === $uid || auth.token.email === 'urciknikolaj642@gmail.com')",
          ".write": "auth != null && auth.uid === $uid"
        }
      },
      "decisions": {
        "$uid": {
          ".read": "auth != null && (auth.uid === $uid || auth.token.email === 'urciknikolaj642@gmail.com')",
          ".write": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'"
        }
      },
      ".read": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'",
      ".write": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'"
    },

    "bots": {
      ".read": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'",
      ".write": "auth != null && auth.token.email === 'urciknikolaj642@gmail.com'"
    },

    "reportsUsers": {
      "$uid": {
        ".read": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com' || root.child('roles/'+auth.uid+'/moderator').val() === true)",
        ".write": "auth != null"
      }
    },

    "vacancies": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": ["ts","city"]
      }
    },

    "ratings": {
      "$uid": {
        ".read": true,
        "$by": {
          ".write": "auth != null && auth.uid === $by",
          ".validate": "newData.isNumber() && newData.val() >= 1 && newData.val() <= 5"
        }
      }
    },

    "notifications": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && (auth.uid === $uid || root.child('friends/'+auth.uid+'/'+$uid).val() === 'accepted')",
        ".indexOn": ["ts"]
      }
    },

    "roomsBlocked": {
      "$room": {
        ".read": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com')",
        ".write": "auth != null && (auth.token.email === 'urciknikolaj642@gmail.com')",
        ".validate": "newData.isBoolean()"
      }
    }
  }
}