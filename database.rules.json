{
  "rules": {
    ".read": true,
    "roles": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('roles/'+auth.uid+'/admin').val() === true)",
        ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true"
      }
    },
    "bans": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('roles/'+auth.uid+'/admin').val() === true)",
        ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true"
      }
    },
    "settings": {
      ".read": true,
      ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true",
      "wallpapers": {
        "main": {
          ".read": true,
          ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true"
        },
        "auth": {
          ".read": true,
          ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true"
        }
      }
    },
    "usersPublic": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('roles/'+auth.uid+'/admin').val() === true)",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "emails": {
      "$key": {
        ".read": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true",
        ".write": "auth != null && newData.child('uid').val() === auth.uid"
      }
    },
    "presence": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChild('ts') && newData.child('ts').isNumber()"
      }
    },
    "messages": {
      ".read": true,
      "$city": {
        ".indexOn": [
          "ts"
        ],
        "$msg": {
          ".write": "auth != null && !(root.child('bans/'+auth.uid+'/until').val() > now)",
          ".validate": "newData.hasChildren(['by','ts','text']) && newData.child('by').val()===auth.uid && newData.child('ts').isNumber() && newData.child('text').isString() && newData.child('text').val().length <= 2000"
        }
      }
    },
    "rentMessages": {
      ".read": true,
      "$city": {
        ".indexOn": [
          "ts"
        ],
        "$msg": {
          ".write": "auth != null && !(root.child('bans/'+auth.uid+'/until').val() > now)",
          ".validate": "newData.hasChildren(['by','ts','text']) && newData.child('by').val()===auth.uid && newData.child('ts').isNumber() && newData.child('text').isString() && newData.child('text').val().length <= 4000"
        }
      }
    },
    "friendRequests": {
      "$to": {
        "$from": {
          ".read": "auth != null && (auth.uid === $to || auth.uid === $from)",
          ".write": "auth != null && auth.uid === $from",
          ".validate": "newData.hasChildren(['from','ts']) && newData.child('from').val()===auth.uid && newData.child('ts').isNumber()"
        }
      }
    },
    "friends": {
      "$a": {
        "$b": {
          ".read": "auth != null && (auth.uid === $a || auth.uid === $b)",
          ".write": "auth != null && (auth.uid === $a || auth.uid === $b)"
        }
      }
    },
    "privateMembers": {
      "$room": {
        "$uid": {
          ".read": "auth != null && (root.child('privateMembers/'+$room+'/'+auth.uid).val() === true || root.child('roles/'+auth.uid+'/admin').val() === true)",
          ".write": "auth != null && (root.child('roles/'+auth.uid+'/admin').val() === true || auth.uid === $uid || (root.child('privateMembers/'+$room+'/'+auth.uid).val() === true && newData.val() === true))",
          ".validate": "newData.isBoolean()"
        }
      }
    },
    "privateMessages": {
      "$room": {
        ".indexOn": [
          "ts"
        ],
        "$msg": {
          ".read": "auth != null && (root.child('privateMembers/'+$room+'/'+auth.uid).val() === true || root.child('roles/'+auth.uid+'/admin').val() === true)",
          ".write": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true && !(root.child('bans/'+auth.uid+'/until').val() > now)",
          ".validate": "newData.hasChildren(['by','ts']) && newData.child('by').val()===auth.uid && newData.child('ts').isNumber() && (!newData.hasChild('text') || (newData.child('text').isString() && newData.child('text').val().length <= 4000)) && (!newData.hasChild('image') || newData.child('image').isString())"
        }
      }
    },
    "inboxMeta": {
      "$uid": {
        "$room": {
          ".read": "auth != null && (auth.uid === $uid || root.child('roles/'+auth.uid+'/admin').val() === true)",
          ".write": "auth != null && (auth.uid === $uid || (root.child('privateMembers/'+$room+'/'+auth.uid).val() === true && newData.child('with').val() === auth.uid))",
          ".validate": "newData.hasChildren(['ts','with']) && newData.child('ts').isNumber() && newData.child('with').isString()"
        }
      }
    },
    "payments": {
      "requests": {
        "$uid": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "bots": {
      ".read": true,
      ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true"
    },
    "reportsUsers": {
      "$uid": {
        ".read": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true",
        "$rid": {
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['from','ts','text']) && newData.child('from').val()===auth.uid && newData.child('ts').isNumber()"
        }
      }
    },
    "vacancies": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "map": {
      ".read": true,
      "poi": {
        "$city": {
          "$id": {
            ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true"
          }
        }
      }
    },
    "spamReports": {
      "$city": {
        "$rid": {
          ".read": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true",
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['by','ts']) && newData.child('by').val()===auth.uid && newData.child('ts').isNumber()"
        }
      }
    }
  }
}