{
  "rules": {
    ".read": false,
    ".write": false,

    "usersPublic": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && (auth.uid === $uid || root.child('admins').child(auth.uid).exists() || $uid.matches(/^bot_.+$/))"
      }
    },

    "usersPrivate": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "messages": {
      "$city": {
        "$msgid": {
          ".read": true,
          ".write": "auth != null && !root.child('bans').child(auth.uid).exists()"
        }
      }
    },

    "dmRooms": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "dmMessages": {
      "$roomId": {
        "$msgid": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },

    "friends": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "bans": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
      }
    },

    "admins": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
