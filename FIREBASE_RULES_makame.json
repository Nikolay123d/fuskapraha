{
  "rules": {
    ".read": true,
    ".write": false,

    "roles": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('roles/'+auth.uid+'/admin').val() === true)",
        ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val() === true",
        "admin": { ".validate": "newData.isBoolean()" },
        "moderator": { ".validate": "newData.isBoolean()" }
      }
    },

    "bans": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('roles/'+auth.uid+'/admin').val()===true)",
        ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true",
        ".validate": "newData.hasChild('until') && newData.child('until').isNumber()"
      }
    },
    "mutes": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('roles/'+auth.uid+'/admin').val()===true)",
        ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true",
        ".validate": "newData.hasChild('until') && newData.child('until').isNumber()"
      }
    },

    "usersPublic": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && (auth.uid === $uid || root.child('roles/'+auth.uid+'/admin').val()===true)"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "presence": {
      ".indexOn": ["ts"],
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChild('ts') && newData.child('ts').isNumber()"
      }
    },

    "messages": {
      "$city": {
        ".indexOn": ["ts"],
        "$msg": {
          ".read": true,
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['ts','uid']) && newData.child('ts').isNumber() && newData.child('uid').isString()"
        }
      }
    },
    "rentMessages": {
      "$city": {
        ".indexOn": ["ts"],
        "$msg": {
          ".read": true,
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['ts','uid']) && newData.child('ts').isNumber() && newData.child('uid').isString()"
        }
      }
    },

    "friendRequests": {
      "$to": {
        "$from": {
          ".read": "auth != null && (auth.uid === $to || auth.uid === $from)",
          ".write": "auth != null && (auth.uid === $from || auth.uid === $to)",
          ".validate": "!newData.exists() || (newData.hasChildren(['ts','from']) && newData.child('ts').isNumber() && newData.child('from').val() === $from)"
        }
      }
    },
    "friends": {
      "$a": {
        "$b": {
          ".read": "auth != null && (auth.uid === $a || auth.uid === $b)",
          ".write": "auth != null && (auth.uid === $a || auth.uid === $b)"
        }
      }
    },

    "privateMembers": {
      "$room": {
        ".read": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true",
        ".write": false,
        "$uid": {
          ".write": "auth != null && (auth.uid === $uid || root.child('privateMembers/'+$room+'/'+auth.uid).val() === true || !root.child('privateMembers/'+$room).exists())",
          ".validate": "newData.isBoolean()"
        }
      }
    },
    "privateRoomsByUser": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$room": {
          ".write": "auth != null && (auth.uid === $uid || root.child('privateMembers/'+$room+'/'+auth.uid).val() === true)",
          ".validate": "newData.isBoolean()"
        }
      }
    },
    "privateMessages": {
      "$room": {
        ".indexOn": ["ts"],
        ".read": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true",
        ".write": "auth != null && root.child('privateMembers/'+$room+'/'+auth.uid).val() === true",
        "$msg": {
          ".validate": "newData.hasChildren(['ts','from']) && newData.child('ts').isNumber() && newData.child('from').isString()"
        }
      }
    },

    "inboxMeta": {
      "$uid": {
        ".indexOn": ["ts", "lastTs"],
        ".read": "auth != null && auth.uid === $uid",
        "$chatId": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && (auth.uid === $uid || root.child('privateMembers/'+$chatId+'/'+auth.uid).val() === true)",
          ".validate": "!newData.exists() || (newData.hasChild('lastTs') && newData.child('lastTs').isNumber() && (!newData.hasChild('ts') || newData.child('ts').isNumber()) && (!newData.hasChild('unread') || newData.child('unread').isNumber()) && (!newData.hasChild('peer') || newData.child('peer').isString()) && (!newData.hasChild('with') || newData.child('with').isString()) && (!newData.hasChild('title') || newData.child('title').isString()) && (!newData.hasChild('lastText') || newData.child('lastText').isString()))"
        }
      }
    },

    "notifications": {
      "$uid": {
        ".indexOn": ["ts"],
        ".read": "auth != null && auth.uid === $uid",
        "$id": {
          ".write": "auth != null && newData.hasChildren(['ts','from']) && newData.child('ts').isNumber() && newData.child('from').val() === auth.uid && (auth.uid === $uid || root.child('friends/'+$uid+'/'+auth.uid).val() === true || root.child('friendRequests/'+$uid+'/'+auth.uid).exists() || (newData.hasChild('chatId') && root.child('privateMembers/'+newData.child('chatId').val()+'/'+auth.uid).val()===true && root.child('privateMembers/'+newData.child('chatId').val()+'/'+$uid).val()===true) )",
          ".validate": "newData.hasChild('ts') && newData.child('ts').isNumber() && (!newData.hasChild('type') || newData.child('type').isString()) && (!newData.hasChild('text') || newData.child('text').isString()) && (!newData.hasChild('from') || newData.child('from').isString())"
        }
      }
    },

    "announcements": {
      "global": {
        ".read": true,
        ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true",
        ".validate": "newData.hasChild('ts') && newData.child('ts').isNumber()"
      }
    },

    "settings": {
      ".read": true,
      ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true",
      "wallpapers": { ".read": true, ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true" },
      "sounds": { ".read": true, ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true" },
      "promo": { ".read": true, ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true" }
    },

    "map": {
      "poi": {
        "$city": {
          ".read": true,
          ".write": "auth != null && (root.child('roles/'+auth.uid+'/admin').val()===true || root.child('roles/'+auth.uid+'/moderator').val()===true)"
        }
      }
    },

    "bots": {
      ".read": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true",
      ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true"
    },
    "userBots": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "fcmTokens": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "$token": {
          ".validate": "newData.hasChild('ts') && newData.child('ts').isNumber()"
        }
      }
    },

    "vacancies": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": ["ts"],
        "$id": {
          ".validate": "newData.hasChildren(['ts','text']) && newData.child('ts').isNumber() && newData.child('text').isString()"
        }
      }
    },

    "onlineStats": {
      "public": {
        ".read": true,
        ".write": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true"
      }
    },

    "support": {
      "tickets": {
        ".read": "auth != null && root.child('roles/'+auth.uid+'/admin').val()===true",
        "$id": {
          ".write": "auth != null",
          ".validate": "newData.hasChild('ts') && newData.child('ts').isNumber()"
        }
      }
    }
  }
}